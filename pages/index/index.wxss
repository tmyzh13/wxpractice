/**index.wxss**/
@import '../../common/common.wxss';

swiper{
  height: 421.5rpx;
}

swiper-item image{
  width: 100%;
  height: 100%;
}

.search{
  padding: 20rpx;
}

.search-text{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50rpx;
  color: #aaa;
  text-align: center;
  border: 1px solid #ddd;
  border-radius: 20rpx;
}

.search-text icon{
  margin-right: 10rpx;
}

.select-title,.newest-title{
  width:100%;
  padding: 30rpx 0;
  height: 40rpx;
  color: #AB956D
}
.select-top{
  width: 100%;
  height: 375rpx;
  display: flex
}

.select-top-small{
  width: 100%;
  height: 375rpx;
  float: left
}

.select-top-small image{
  /* display: blcok; */
  width: 100%;
  height: 100%;
}

.select-bottom{
  width:100%;
  height: 375rpx;
}

.select-bottom image{
  width: 100%;
  height: 100%;
}

.newest-box{
  padding: 0 40rpx;
  display: flex;
  flex-wrap: wrap;

}

.newest-list{
  width: 49%;
  height: 325rpx;
  margin: 0 2% 20rpx 0;
  border-radius: 10px;
  text-align: center;
  background: #f5f6f5;
}
.newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-box .newest-list image{
  width: 175rpx;
  height: 175rpx;
  margin: 20rpx 0 10rpx;
}

.newest-box .newest-list .newest-text{
    font-size: 32rpx;
}



.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}