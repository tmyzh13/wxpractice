<!--pages/address/address.wxml-->
<view class="main">
  <view class="form-box">
    <form bindsubmit="formSubmit">
      <input value="{{address.name}}" name="name" placeholder="姓名"></input>
      <input value="{{address.phone}}" name="phone" placeholder="电话号码"></input>
      <input value="{{address.detail}}" name="address" placeholder="详细地址"></input>
      <view class="view-button" form-type="submit">保存</view>
    </form>
  </view>
</view>
