/* pages/user/user.wxss */
@import '../../common/common.wxss';

.header{
  position: relative;
  height: 160rpx;
  line-height: 100rpx;
  padding: 30rpx 30rpx 30rpx 150rpx;
  box-sizing: border-box;
  background: #AB956D;
  font-size: 28rpx;
  color: #fff;
}
.header .thumb{
    position: absolute;
    left: 30rpx;
    top: 30rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.header .about{
  float: right;
}

.address-box{
  border-bottom: 20rpx solid #ededed;
  color: #999;
  font-size: 28rpx;

}

.address-box .address-manage{
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #e9e9e9;
  text-align: center
}